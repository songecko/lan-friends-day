{% macro list(users) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'GeckoBackendBundle:Macros:alerts.html.twig' as alerts %}
{% import 'GeckoBackendBundle:Macros:misc.html.twig' as misc %}

{% if users|length > 0 %}
<div class="box">
	<div class="box-body table-responsive no-padding">
		<table class="table table-hover"><tbody>
			<tr>
				<th>ID</th>
				<th>Nombre y Apellido</th>
				<th>Nombre Usuario</th>
				<th>Dni</th>
				<th>Edad</th>
				<th>Telefono</th>
				<th>Provincia</th>
				<th>Email</th>
				<th>Tweets</th>
				<th>Newsletter?</th>
				<th></th>
			</tr>
			{% for user in users %}
	        <tr>
				<td>{{ user.id }}</td>
				<td>{{ user.fullname }}</td>
				<td>{{ user.username }}</td>
				<td>{{ user.dni }}</td>
				<td>{{ user.edad }}</td>
				<td>{{ user.telefono }}</td>
				<td>{{ user.provincia }}</td>
				<td>{{ user.mail }}</td>
				<td><a href="{{ path('odiseo_lan_twitteruser_index_by_user', {'user_id': user.id} )}}">Ver Tweets ({{ user.twitters|length }})</a></td>
				<td>
					{% if user.acceptNewsletter %}
					<span class="label label-success">SÃ­</span>
					{% else %}
					<span class="label label-danger">No</span>
					{% endif %}
				</td>
				<td>
					<div class="pull-right">
	                    {{ buttons.delete(path('odiseo_lan_user_delete', {'id': user.id})) }}
	                </div>
				</td>
			</tr>
	        {% endfor %}
		</tbody></table>
	</div>
</div>
{% else %}
{{ alerts.info('gecko.backend.no_results'|trans) }}
{% endif %}

{% endmacro %}
{% extends 'OdiseoLanBundle::Frontend/layout.html.twig' %}

{% block content %}
<div class="cuerpo">
	<h1 class="fontsforweb_fontid_1416">ASEGURÁ TU LUGAR, FALTAN:</h1>
	<div class="countdown clearfix" data-end-date="July 19, 2014 15:03:25">
		<div class="day">
			<div class="number">0</div>
			<div class="label">Días</div>
		</div>
		<div class="hour">
			<div class="number">0</div>
			<div class="label">Horas</div>
		</div>
		<div class="minute">
			<div class="number">0</div>
			<div class="label">Minutos</div>
		</div>
		<div class="second">
			<div class="number">0</div>
			<div class="label">Segundos</div>
		</div>
	</div>
	<form class="form">
		<div class="formTop">
			<img src="{{ asset('bundles/odiseolan/images/form-image.png') }}" />
			<div class="inputsTop">
				<input type="text" name="fullname" placeholder="Nombre y Apellido" class="long">
				<input type="text" name="dni" placeholder="Dni" class="short">
				<input type="text" name="age" placeholder="Edad" class="short">
				<input type="text" name="phone" placeholder="Teléfono" class="long">
			</div>
			<div class="inputsBottom">
				<input type="text" name="nationality" placeholder="Nacionalidad" class="long">
				<input type="text" name="email" placeholder="Mail" class="email">
				<input type="checkbox" name="terms" value="terms" class="checkbox"><p>Acepto los términos y condiciones</p>
			</div>
		</div>
		<div class="formBottom">
			<button class="follow fontsforweb_fontid_1416"><img src="{{ asset('bundles/odiseolan/images/twitter.png') }}" />FOLLOW</button>
			<button type="submit " class="register fontsforweb_fontid_1416">PARTICIPAR</button>
		</div>
	</form>
	<div class="signinTwitter">
		<button class="follow fontsforweb_fontid_1416"><img src="{{ asset('bundles/odiseolan/images/twitter.png') }}" />INGRESAR CON TWITTER</button><p>PARA ASEGURARTE UN LUGAR</p>
	</div>
</div>
{% endblock %}

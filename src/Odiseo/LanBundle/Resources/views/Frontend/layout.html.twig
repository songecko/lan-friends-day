		<nav class="navbar navbar-default" role="navigation">
			<div class="container-fluid">
				<div class="logo"><a href="{{ path('odiseo_lan_frontend_homepage') }}"><img src="{{ asset('bundles/odiseolan/images/lan.png') }}" alt="LAN Argentina"/></a></div>
